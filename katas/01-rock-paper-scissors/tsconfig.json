{
  "exclude": ["node_modules"],
  "include": ["./src", "./tests"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@game": ["./src/game"]
    },
    "types": ["jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  }
}
